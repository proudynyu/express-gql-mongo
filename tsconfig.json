{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./",
    "outDir": "dist",
    "baseUrl": ".",
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "paths": {
      "@database/*": ["./src/database/*"],
      "@services/*": ["./src/services/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "exclude": ["node_modules", "src/**.spec.ts"]
}
